<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_card"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvName1"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light"
        android:textSize="25sp"
        android:text="Nguyễn Hồng Giang - 65361" />

    <TextView
        android:id="@+id/tvName2"
        android:layout_below="@id/tvName1"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light"
        android:textSize="25sp"
        android:text="Nguyễn Khương Duy - 44861" />

    <TextView
        android:layout_below="@id/tvName2"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light"
        android:textSize="20sp"
        android:text="Đề tài : Cảm biến nhiệt độ và độ ẩm" />

    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/layout_Temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imgTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_thermometer_white_48dp" />

        <TextView
            android:id="@+id/tvTemp"
            android:layout_toRightOf="@id/imgTemp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@id/imgTemp"
            android:layout_alignBottom="@id/imgTemp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light"
            android:textSize="36sp"
            tools:text="0 °C" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/layout_Temp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imgHum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_water_white_48dp" />

        <TextView
            android:id="@+id/tvHum"
            android:layout_toRightOf="@id/imgHum"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@id/imgHum"
            android:layout_alignBottom="@id/imgHum"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light"
            android:textSize="36sp"
            tools:text="0 %" />
    </RelativeLayout>


</RelativeLayout>